{
    "name": "Scrappy!",
    "version": "1.0.0",
    "description": "Scrapes HTML Content without needing to call a backend API!",
    "manifest_version": 3,
    "author": "Me",

    "action":{
        "default_title": "Scrappy!",
        "default_popup": "index.html"
    },
    
    "content_scripts": [{

        "matches":["<all_urls>"],
        "js": ["main.js", "script.js"],
        "run_at": "document_end"
    }],

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "activeTab", "tabs", "scripting"
    ],

    "icons": { 
        "16": "./icons/16.png",
        "64": "./icons/64.png",
       "128": "./icons/128.png" }

}